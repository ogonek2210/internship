FROM centos:7
ENV DEVOPS=Hanna
RUN  yum -y update\
     && yum -y install epel-release\
     && yum -y install nginx\
     && yum clean all && \
         rm -rf /var/cache/yum

COPY ./index.html /usr/share/nginx/html/index.html
WORKDIR /usr/share/nginx/html
RUN date +%x_%H:%M:%S:%N >> ./index.html
RUN echo "DEVOPS------>${DEVOPS}" >> ./index.html
EXPOSE 80/tcp
CMD ["nginx", "-g daemon off;"]