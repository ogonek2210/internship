FROM centos:7
ENV DEVOPS=Hanna
RUN  yum -y update\
     && yum -y install epel-release\
     && yum -y install nginx\
     && yum clean all && \
         rm -rf /var/cache/yum
RUN touch "index.html"
ADD index.html /usr/share/nginx/html/index.html
RUN echo "DEVOPS------>${DEVOPS}" > /usr/share/nginx/html/index.html
EXPOSE 80/tcp
CMD ["nginx", "-g daemon off;"]