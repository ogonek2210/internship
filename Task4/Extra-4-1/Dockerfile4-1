FROM ubuntu:latest
LABEL maintainer="Hanna Sitkevich"
RUN apt-get update -y \
     && apt-get upgrade -y \
     && apt-get install httpd apache2 nginx -y
EXPOSE 80/TCP
CMD ["nginx", "-g daemon off;"]